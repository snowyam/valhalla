<header class="navbar navbar-default navbar-fixed-top">
  <div class="container">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <%= link_to "valhalla", root_path, class: "navbar-brand" %>
    </div>
    <div id="navbar" class="collapse navbar-collapse">
      <ul class="nav navbar-nav navbar-right">
      <% if user_signed_in? %>
        <li>
          <%= link_to current_user do %>
            <%= gravatar_for(current_user, size: 16) %>
            <%=   current_user.first_name %>
          <% end %>
        </li>
        <li><%= link_to "Home", '#' %></li>
        <li><%= link_to "Find Friends", '#' %></li>
        <li>
          <%= link_to '#' do %>
            <i class="fa fa-users"></i>
            <span class="badge">
              '#'
            </span>
          <% end %>
        </li>
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><span class="caret"></span></a>
          <ul class="dropdown-menu">
            <li><%= link_to "Profile", current_user %></li>
            <li><%= link_to "Feed", '#' %></li>
            <li><%= link_to "Settings", edit_user_registration_path %></li>
            <li role="separator" class="divider"></li>
            <li>
              <%= link_to "Log out", logout_path, method: "delete" %>
            </li>
          </ul>
        </li>
      <% else %>
        <%= link_to "Log In", login_path, class: "btn btn-default navbar-btn" %>
        <%= link_to "Sign Up", signup_path, class: "btn btn-default navbar-btn" %>
      <% end %>
      </ul>
    </div>
  </div>
</header>