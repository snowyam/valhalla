<% if current_user.likes.find_by(post_id: post.id) %>
  <%= link_to like_path(current_user, post_id: post.id, user_id: current_user.id),
                        method: :delete do %>
    <i class="fa fa-thumbs-o-down"></i>
  <% end %>
<% else %>
  <%= link_to likes_path(post_id: post.id, user_id: current_user.id),
                         method: :post do %>
    <i class="fa fa-thumbs-o-up"></i>
  <% end %>
<% end %>
<span class="badge">
  <% if post.liking_users.any? %>
    <%= post.liking_users.count %>
  <% end %>
</span>