<% provide(:title, 'Edit Profile') %>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <h2>Edit Profile</h2>

    <%= form_for(current_user.profile, url: profile_path(current_user), html: { method: :patch }) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <div class="form-group">
        <%= f.label :bio %>
        <%= f.text_area :bio, class: 'form-control', rows: "2", placeholder: 'Short about you!' %>
      </div>

      <div class="form-group">
        <%= f.label :birthday %>
        <%= f.date_select :birthday, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :birthplace %>
        <%= f.text_field :birthplace, class: 'form-control', placeholder: 'Birthplace'%>
      </div>

      <div class="form-group">
        <%= f.label :currentplace %>
        <%= f.text_field :currentplace, class: 'form-control', placeholder: 'Currently living'%>
      </div>

      <div class="form-group">
        <%= f.label :education %>
        <%= f.text_field :education, class: 'form-control', placeholder: 'Education'%>
      </div>

      <div class="form-group">
        <%= f.label :occupation %>
        <%= f.text_field :occupation, class: 'form-control', placeholder: 'Occupation'%>
      </div>

      <%= f.submit "Update", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>